#include <ctype.h>

/**
 * rot13 - encode with rot13
 * @c: The string to encode
 *
 * Return: encoded string
 */
char *rot13(char *c)
{
size_t i;

for (i = 0; i < strlen(s); i++)
{
if (isalpha(s[i]) && ((s[i] + 13 > 122) || (s[i] + 13 > 90)))
{
s[i] = s[i] + 13 - 26;
continue;
}
if (isalpha(s[i])
s[i] = s[i] + 13;
}
return(s);
}
